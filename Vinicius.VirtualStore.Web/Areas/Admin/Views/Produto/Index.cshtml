@model IEnumerable<Vinicius.VirtualStore.Domain.Entities.Products>

@{
    ViewBag.Title = "Administrative - Products";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="alert alert-success" id="mensagem"></div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Viniciu's Virtual Store - Administrative - Products</h3>
    </div>

    <div class="panel-body">
        @Html.ActionLink("New Product", "Add", "Produto", new { @class = "btn btn-default" })

        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-right">Id</th>
                    <th>Nome</th>
                    <th class="text-right">Preço</th>
                    <th class="text-center">Excluir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.ProductId">
                        <td>@item.ProductId</td>
                        <td>@Html.ActionLink(item.Name, "Edit", new { item.ProductId })</td>
                        <td class="text-right">@item.Price.ToString("C")</td>
                        <td class="text-center">
                            @using (Html.BeginForm("Remove", "Produto"))
                            {
                                @Html.Hidden("ProdutoId", item.ProductId)
                                <input type="submit" class="btn btn-default btn-xs" value="Excluir" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
