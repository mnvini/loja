@model System.Collections.Generic.IEnumerable<string>

@Html.ActionLink("All Products", "ProductsList", "Showcase", null, new { @class = "btn btn-block btn-default btn-lg" })
@foreach (var link in Model)
{

  @Html.RouteLink(link, new
  {
      controller = "Showcase",
      action = "ProductsList",
      category = link,
      page = 1,

  }, new
  {
      @class = "btn btn-block btn-default btn-lg"
      +(link == ViewBag.SelectedCategory ? " btn-primary" : "")
  })

}